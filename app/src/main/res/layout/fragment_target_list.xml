<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".ui.targetMain.targetList.TargetListFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="match_parent"
                android:layout_height="274dp"
                tools:src="@tools:sample/avatars" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_margin="5dp"
                android:background="#FFBF00" />

            <TextView
                android:id="@+id/tv_label_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Название"
                android:layout_margin="5dp"
                android:textColor="#F8F8F8" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etTitle"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_margin="5dp"
                android:background="@drawable/corner_radius_edit_text"
                android:hint="Конкретная и измеримая цель"
                android:padding="@dimen/view_padding_10"
                android:textColor="#ECE0E0"
                android:textColorHint="#F1EBEB"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
                tools:ignore="SpeakableTextPresentCheck" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_margin="5dp"
                android:background="#FFBF00" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Описание"
                android:textColor="#F8F8F8" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="107dp"
                android:layout_margin="5dp"
                android:background="@drawable/corner_radius_edit_text"
                android:gravity="start"
                android:hint="Почему эта цель важна для вас?"
                android:padding="@dimen/view_padding_10"
                android:textColor="#ECE0E0"
                android:textColorHint="#F1EBEB"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
                tools:ignore="SpeakableTextPresentCheck" />

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_margin="5dp"
                android:background="#FFBF00" />

            <TextView
                android:id="@+id/tvReward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Награда"
                android:textColor="#F8F8F8" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etReward"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_margin="5dp"
                android:background="@drawable/corner_radius_edit_text"
                android:hint="Как вы вознаградите себя?"
                android:padding="@dimen/view_padding_10"
                android:textColor="#ECE0E0"
                android:textColorHint="#F1EBEB"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
                tools:ignore="SpeakableTextPresentCheck" />

            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_margin="5dp"
                android:background="#FFBF00" />

            <TextView
                android:id="@+id/tvDataEndPoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Дата звершения"
                android:textColor="#F8F8F8" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etData"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_margin="5dp"
                android:background="@drawable/corner_radius_edit_text"
                android:hint="Конкретная дата"
                android:padding="@dimen/view_padding_10"
                android:textColor="#ECE0E0"
                android:textColorHint="#F1EBEB"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
                tools:ignore="SpeakableTextPresentCheck" />
            <View
                android:id="@+id/view6"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_margin="5dp"
                android:background="#FFBF00" />

            <TextView
                android:id="@+id/tvEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="Завешить"
                android:textColor="#FFC107"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvClose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center"
                android:text="Удалить"
                android:textColor="#F10000"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>